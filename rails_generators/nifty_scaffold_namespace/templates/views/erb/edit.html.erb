<%% title t('form.edit') + " " + <%= namespaced_class_name %>.human_name %>

<table class="form">

<%- if actions? :show, :index -%>
  <tr class="actions"><th colspan="3">
<%- if action? :show -%>
    <%%= link_to t('form.show'), <%= namespaced_singular_name %> %> |
<%- end -%>
<%- if action? :index -%>
    <%%= link_to t('form.view_all'), <%= plural_name %>_path %>
<%- end -%>
  </th></tr>
<%- end -%>

  <%= render_form %>

</table>
